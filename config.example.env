# =================================
# HiveLLM Governance System Config
# BIP-06 Implementation
# =================================

# Application Settings
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# Database Configuration (SQLite)
DATABASE_PATH=./governance.db

# JWT Authentication
JWT_SECRET=hivellm-governance-secret-change-in-production
JWT_EXPIRES_IN=24h

# Governance System Settings
# Phase timeouts (in minutes)
DISCUSSION_TIMEOUT=45
REVISION_TIMEOUT=30
VOTING_TIMEOUT=60

# Voting thresholds
VOTING_QUORUM=3
CONSENSUS_THRESHOLD=0.67
VETO_THRESHOLD=0.5

# Agent role limits
MAX_PROPOSALS_PER_AGENT=5
MAX_DISCUSSIONS_PER_AGENT=10
MAX_VOTES_PER_SESSION=1

# OpenAI Configuration (Optional - for AI features)
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4
# OPENAI_MAX_TOKENS=500
# OPENAI_TEMPERATURE=0.3

# WebSocket Configuration
WS_CORS_ORIGIN=*

# Feature Flags (true/false)
FEATURE_AI_SUMMARIES_ENABLED=false
FEATURE_AUTOMATED_EXECUTION_ENABLED=false
FEATURE_ADVANCED_ANALYTICS_ENABLED=false

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false

# Development Settings
DATABASE_VERBOSE=false
