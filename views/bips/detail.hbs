<!-- Header -->
<div class="flex justify-between items-start mb-6">
    <div class="flex-1">
        <div class="flex items-center space-x-4 mb-2">
            <h1 class="text-2xl font-bold text-gray-100">{{bip.title}}</h1>
            <span class="px-3 py-1 text-sm font-medium rounded-full {{#if (eq bip.status 'active')}}bg-green-900 text-green-300{{else if (eq bip.status 'draft')}}bg-yellow-900 text-yellow-300{{else if (eq bip.status 'final')}}bg-blue-900 text-blue-300{{else}}bg-gray-800 text-gray-300{{/if}}">
                {{capitalize bip.status}}
            </span>
        </div>
        
        <div class="flex items-center space-x-6 text-sm text-gray-400">
            <span class="flex items-center space-x-1">
                <i data-feather="hash" class="w-4 h-4"></i>
                <span>{{bip.id}}</span>
            </span>
            <span class="flex items-center space-x-1">
                <i data-feather="calendar" class="w-4 h-4"></i>
                <span>{{formatDate bip.createdAt}}</span>
            </span>
        </div>
    </div>
    
    <a href="/bips" class="inline-flex items-center space-x-2 bg-gray-700 hover:bg-gray-600 text-gray-300 px-4 py-2 rounded-lg transition-colors">
        <i data-feather="arrow-left" class="w-4 h-4"></i>
        <span>Back to BIPs</span>
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
        <!-- BIP Content -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h2 class="text-lg font-semibold text-gray-100 flex items-center">
                    <i data-feather="file-text" class="w-5 h-5 mr-2 text-orange-500"></i>
                    BIP Content
                </h2>
            </div>
            
            <div class="p-6">
                <div class="prose prose-invert max-w-none">
                    <div class="whitespace-pre-wrap text-gray-300 leading-relaxed">{{safeContent bip.content}}</div>
                </div>
            </div>
        </div>
        
        <!-- Related Proposals -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h2 class="text-lg font-semibold text-gray-100 flex items-center">
                    <i data-feather="link" class="w-5 h-5 mr-2 text-blue-500"></i>
                    Related Information
                </h2>
            </div>
            
            <div class="p-6 space-y-4">
                <div>
                    <h3 class="font-medium text-gray-300 mb-2">Related Proposals</h3>
                    <p class="text-gray-400 text-sm">
                        This BIP may be related to proposals in the governance system. 
                        <a href="/proposals?search={{bip.id}}" class="text-blue-400 hover:text-blue-300">Search for related proposals</a>
                    </p>
                </div>
                
                <div>
                    <h3 class="font-medium text-gray-300 mb-2">Implementation Status</h3>
                    <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 rounded-full {{#if (eq bip.status 'final')}}bg-green-500{{else if (eq bip.status 'active')}}bg-yellow-500{{else}}bg-gray-500{{/if}}"></div>
                        <span class="text-sm text-gray-400">
                            {{#if (eq bip.status 'final')}}
                                Implemented and finalized
                            {{else if (eq bip.status 'active')}}
                                Under active development
                            {{else if (eq bip.status 'draft')}}
                                Draft stage - not yet implemented
                            {{else}}
                                Status unknown
                            {{/if}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Sidebar Info -->
    <div class="space-y-6">
        <!-- BIP Details -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h3 class="font-semibold text-gray-100">BIP Details</h3>
            </div>
            
            <div class="p-6 space-y-4">
                <div>
                    <label class="text-sm font-medium text-gray-400">BIP Number</label>
                    <p class="text-gray-200 font-mono">{{bip.id}}</p>
                </div>
                
                <div>
                    <label class="text-sm font-medium text-gray-400">Status</label>
                    <p class="text-gray-200 capitalize">{{bip.status}}</p>
                </div>
                
                <div>
                    <label class="text-sm font-medium text-gray-400">Created</label>
                    <p class="text-gray-200">{{formatDate bip.createdAt}}</p>
                </div>
                
                <div>
                    <label class="text-sm font-medium text-gray-400">Last Updated</label>
                    <p class="text-gray-200">{{formatDate bip.updatedAt}}</p>
                </div>
            </div>
        </div>
        
        <!-- Metadata -->
        {{#if bip.metadata}}
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h3 class="font-semibold text-gray-100">Metadata</h3>
            </div>
            
            <div class="p-6">
                <pre class="text-sm text-gray-300 bg-gray-950 p-4 rounded border border-gray-800 overflow-x-auto">{{json bip.metadata}}</pre>
            </div>
        </div>
        {{/if}}
        
        <!-- Quick Actions -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h3 class="font-semibold text-gray-100">Actions</h3>
            </div>
            
            <div class="p-6 space-y-3">
                <a href="/proposals?search={{bip.id}}" class="flex items-center space-x-2 text-blue-400 hover:text-blue-300 text-sm">
                    <i data-feather="search" class="w-4 h-4"></i>
                    <span>Find Related Proposals</span>
                </a>
                
                <a href="/api/bips/{{bip.id}}" target="_blank" class="flex items-center space-x-2 text-green-400 hover:text-green-300 text-sm">
                    <i data-feather="code" class="w-4 h-4"></i>
                    <span>API Data</span>
                </a>
                
                {{#if (eq bip.status 'active')}}
                <a href="/discussions?search={{bip.id}}" class="flex items-center space-x-2 text-yellow-400 hover:text-yellow-300 text-sm">
                    <i data-feather="message-circle" class="w-4 h-4"></i>
                    <span>View Discussions</span>
                </a>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<script>
    feather.replace();
</script>
