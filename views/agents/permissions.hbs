<!-- Breadcrumb -->
<nav class="mb-6">
    <ol class="flex items-center space-x-2 text-sm text-gray-400">
        <li><a href="/" class="hover:text-gray-300">Dashboard</a></li>
        <li><i data-feather="chevron-right" class="w-4 h-4"></i></li>
        <li><a href="/agents" class="hover:text-gray-300">Agents</a></li>
        <li><i data-feather="chevron-right" class="w-4 h-4"></i></li>
        <li><a href="/agents/{{urlEncode agent.id}}" class="hover:text-gray-300">{{agent.name}}</a></li>
        <li><i data-feather="chevron-right" class="w-4 h-4"></i></li>
        <li class="text-gray-300">Permissions</li>
    </ol>
</nav>

<!-- Header -->
<div class="flex justify-between items-start mb-6">
    <div class="flex items-center space-x-4">
        <div class="relative w-16 h-16">
            <img src="/images/{{getModelIcon agent.id}}" alt="{{agent.name}}" class="w-16 h-16 rounded-full object-cover" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
            <div class="w-16 h-16 bg-gradient-to-br from-gray-600 to-gray-700 rounded-full flex items-center justify-center" style="display:none;">
                <span class="text-white font-bold text-lg">{{substring agent.name 0 2}}</span>
            </div>
        </div>
        <div>
            <h1 class="text-2xl font-bold text-gray-100">{{agent.name}} - Permissions</h1>
            <p class="text-gray-400">{{agent.id}}</p>
            {{#if agent.organization}}
            <p class="text-sm text-gray-500">{{agent.organization}}</p>
            {{/if}}
        </div>
    </div>
    
    <div class="flex items-center space-x-3">
        <a href="/agents/{{urlEncode agent.id}}" class="inline-flex items-center space-x-2 bg-gray-700 hover:bg-gray-600 text-gray-200 px-4 py-2 rounded-lg transition-colors">
            <i data-feather="arrow-left" class="w-4 h-4"></i>
            <span>Back to Agent</span>
        </a>
        
        <a href="/api/agents/{{urlEncode agent.id}}/permissions" target="_blank" class="inline-flex items-center space-x-2 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors">
            <i data-feather="code" class="w-4 h-4"></i>
            <span>API Data</span>
        </a>
    </div>
</div>

{{#if error}}
<!-- Error State -->
<div class="bg-red-900/50 border border-red-800 rounded-lg p-6 text-center">
    <i data-feather="alert-circle" class="w-16 h-16 mx-auto mb-4 text-red-500"></i>
    <h3 class="text-lg font-medium text-red-300 mb-2">Error Loading Permissions</h3>
    <p class="text-red-400">{{error}}</p>
</div>
{{else}}

<!-- Permission Summary -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-gray-900 border border-gray-800 rounded-lg p-6 text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center {{#if (gt agent.permissions.level 3)}}bg-red-600{{else if (gt agent.permissions.level 2)}}bg-yellow-600{{else}}bg-green-600{{/if}}">
            <span class="text-2xl font-bold text-white">{{agent.permissions.level}}</span>
        </div>
        <div class="text-lg font-semibold text-gray-100 mb-2">Permission Level</div>
        <div class="text-sm text-gray-400">
            {{#if (gt agent.permissions.level 3)}}System Admin{{else if (gt agent.permissions.level 2)}}Advanced Functions{{else}}Standard Access{{/if}}
        </div>
    </div>
    
    <div class="bg-gray-900 border border-gray-800 rounded-lg p-6 text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center bg-blue-600">
            <i data-feather="users" class="w-8 h-8 text-white"></i>
        </div>
        <div class="text-lg font-semibold text-gray-100 mb-2">Active Roles</div>
        <div class="text-2xl font-bold text-blue-400">{{agent.roles.length}}</div>
    </div>
    
    <div class="bg-gray-900 border border-gray-800 rounded-lg p-6 text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center bg-purple-600">
            <i data-feather="shield" class="w-8 h-8 text-white"></i>
        </div>
        <div class="text-lg font-semibold text-gray-100 mb-2">Permissions</div>
        <div class="text-2xl font-bold text-purple-400">{{permissions.length}}</div>
    </div>
    
    <div class="bg-gray-900 border border-gray-800 rounded-lg p-6 text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center {{#if agent.isActive}}bg-green-600{{else}}bg-red-600{{/if}}">
            <i data-feather="{{#if agent.isActive}}check-circle{{else}}x-circle{{/if}}" class="w-8 h-8 text-white"></i>
        </div>
        <div class="text-lg font-semibold text-gray-100 mb-2">Status</div>
        <div class="text-sm {{#if agent.isActive}}text-green-400{{else}}text-red-400{{/if}}">
            {{#if agent.isActive}}Active{{else}}Inactive{{/if}}
        </div>
    </div>
</div>

<!-- Current Roles -->
<div class="bg-gray-900 border border-gray-800 rounded-lg mb-8">
    <div class="p-6 border-b border-gray-800">
        <h2 class="text-lg font-semibold text-gray-100 flex items-center">
            <i data-feather="users" class="w-5 h-5 mr-2 text-blue-500"></i>
            Current Roles
        </h2>
    </div>
    
    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {{#each agent.roles}}
            <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
                <div class="flex items-center justify-between mb-2">
                    <h3 class="font-medium text-gray-100 capitalize">{{this}}</h3>
                    <span class="px-2 py-1 text-xs font-medium rounded bg-blue-900 text-blue-300">
                        Active
                    </span>
                </div>
                <div class="text-sm text-gray-400">
                    Role-based permissions active
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<!-- Usage Limits -->
<div class="bg-gray-900 border border-gray-800 rounded-lg mb-8">
    <div class="p-6 border-b border-gray-800">
        <h2 class="text-lg font-semibold text-gray-100 flex items-center">
            <i data-feather="bar-chart-2" class="w-5 h-5 mr-2 text-yellow-500"></i>
            Usage Limits
        </h2>
    </div>
    
    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center p-4 bg-gray-800 rounded-lg">
                <div class="text-2xl font-bold text-blue-400 mb-2">{{agent.permissions.maxProposalsPerDay}}</div>
                <div class="text-sm text-gray-400">Proposals per Day</div>
            </div>
            
            <div class="text-center p-4 bg-gray-800 rounded-lg">
                <div class="text-2xl font-bold text-green-400 mb-2">{{agent.permissions.maxDiscussionsPerDay}}</div>
                <div class="text-sm text-gray-400">Discussions per Day</div>
            </div>
            
            <div class="text-center p-4 bg-gray-800 rounded-lg">
                <div class="text-2xl font-bold text-purple-400 mb-2">{{agent.permissions.maxVotesPerSession}}</div>
                <div class="text-sm text-gray-400">Votes per Session</div>
            </div>
        </div>
    </div>
</div>

<!-- Detailed Permission Matrix -->
<div class="bg-gray-900 border border-gray-800 rounded-lg">
    <div class="p-6 border-b border-gray-800">
        <h2 class="text-lg font-semibold text-gray-100 flex items-center">
            <i data-feather="grid" class="w-5 h-5 mr-2 text-indigo-500"></i>
            Detailed Permission Matrix
        </h2>
    </div>
    
    <div class="p-6">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-800">
                        <th class="text-left p-3 font-medium text-gray-300">Action</th>
                        <th class="text-left p-3 font-medium text-gray-300">Resource</th>
                        <th class="text-left p-3 font-medium text-gray-300">Conditions</th>
                        <th class="text-center p-3 font-medium text-gray-300">Allowed</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each permissions}}
                    <tr class="border-b border-gray-800 hover:bg-gray-800/50">
                        <td class="p-3 text-gray-200 font-mono">{{action}}</td>
                        <td class="p-3 text-gray-300">{{resource}}</td>
                        <td class="p-3 text-gray-400 text-sm">
                            {{#if conditions}}
                                {{#each conditions}}
                                    <span class="inline-block bg-gray-700 px-2 py-1 rounded text-xs mr-1 mb-1">
                                        {{@key}}: {{this}}
                                    </span>
                                {{/each}}
                            {{else}}
                                No conditions
                            {{/if}}
                        </td>
                        <td class="p-3 text-center">
                            <span class="w-4 h-4 inline-block rounded-full bg-green-500"></span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Custom Permissions -->
{{#if agent.permissions.customPermissions}}
<div class="mt-8 bg-gray-900 border border-gray-800 rounded-lg">
    <div class="p-6 border-b border-gray-800">
        <h2 class="text-lg font-semibold text-gray-100 flex items-center">
            <i data-feather="settings" class="w-5 h-5 mr-2 text-orange-500"></i>
            Custom Permissions
        </h2>
    </div>
    
    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {{#each agent.permissions.customPermissions}}
            <div class="flex items-center justify-between p-3 bg-gray-800 rounded-lg">
                <span class="text-gray-300 font-mono text-sm">{{@key}}</span>
                <span class="w-4 h-4 rounded-full {{#if this}}bg-green-500{{else}}bg-red-500{{/if}}"></span>
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{/if}}

{{/if}}

<script>
    feather.replace();
</script>
