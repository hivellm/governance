<!-- Header -->
<div class="flex justify-between items-start mb-6">
    <div class="flex items-center space-x-4">
        <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
            <span class="text-white font-bold text-xl">{{substring agent.name 0 2}}</span>
        </div>
        
        <div>
            <h1 class="text-2xl font-bold text-gray-100">{{agent.name}}</h1>
            <p class="text-gray-400">{{agent.id}}</p>
            <div class="flex items-center space-x-2 mt-2">
                <div class="w-2 h-2 rounded-full {{#if agent.isActive}}bg-green-500{{else}}bg-red-500{{/if}}"></div>
                <span class="text-sm {{#if agent.isActive}}text-green-400{{else}}text-red-400{{/if}}">
                    {{#if agent.isActive}}Active{{else}}Inactive{{/if}}
                </span>
            </div>
        </div>
    </div>
    
    <a href="/agents" class="inline-flex items-center space-x-2 bg-gray-700 hover:bg-gray-600 text-gray-300 px-4 py-2 rounded-lg transition-colors">
        <i data-feather="arrow-left" class="w-4 h-4"></i>
        <span>Back to Agents</span>
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Info -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Basic Information -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h2 class="text-lg font-semibold text-gray-100 flex items-center">
                    <i data-feather="user" class="w-5 h-5 mr-2 text-blue-500"></i>
                    Agent Information
                </h2>
            </div>
            
            <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="text-sm font-medium text-gray-400">Name</label>
                    <p class="text-gray-200 font-medium">{{agent.name}}</p>
                </div>
                
                <div>
                    <label class="text-sm font-medium text-gray-400">Organization</label>
                    <p class="text-gray-200">{{#if agent.organization}}{{agent.organization}}{{else}}Not specified{{/if}}</p>
                </div>
                
                <div>
                    <label class="text-sm font-medium text-gray-400">Created</label>
                    <p class="text-gray-200">{{formatDate agent.createdAt}}</p>
                </div>
                
                <div>
                    <label class="text-sm font-medium text-gray-400">Last Active</label>
                    <p class="text-gray-200">{{formatDate agent.lastActive}}</p>
                </div>
            </div>
        </div>
        
        <!-- Roles -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h2 class="text-lg font-semibold text-gray-100 flex items-center">
                    <i data-feather="shield" class="w-5 h-5 mr-2 text-green-500"></i>
                    Roles & Permissions
                </h2>
            </div>
            
            <div class="p-6">
                <div class="mb-6">
                    <h3 class="font-medium text-gray-300 mb-3">Assigned Roles</h3>
                    <div class="flex flex-wrap gap-2">
                        {{#each agent.roles}}
                        <span class="px-3 py-1 text-sm font-medium rounded-full bg-blue-900 text-blue-300 border border-blue-800">
                            {{capitalize this}}
                        </span>
                        {{/each}}
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h3 class="font-medium text-gray-300 mb-3">Core Permissions</h3>
                        <div class="space-y-2">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Can Propose</span>
                                <span class="{{#if agent.permissions.canPropose}}text-green-400{{else}}text-red-400{{/if}}">
                                    {{#if agent.permissions.canPropose}}✓{{else}}✗{{/if}}
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Can Vote</span>
                                <span class="{{#if agent.permissions.canVote}}text-green-400{{else}}text-red-400{{/if}}">
                                    {{#if agent.permissions.canVote}}✓{{else}}✗{{/if}}
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Can Review</span>
                                <span class="{{#if agent.permissions.canReview}}text-green-400{{else}}text-red-400{{/if}}">
                                    {{#if agent.permissions.canReview}}✓{{else}}✗{{/if}}
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Can Execute</span>
                                <span class="{{#if agent.permissions.canExecute}}text-green-400{{else}}text-red-400{{/if}}">
                                    {{#if agent.permissions.canExecute}}✓{{else}}✗{{/if}}
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="font-medium text-gray-300 mb-3">Advanced Permissions</h3>
                        <div class="space-y-2">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Can Moderate</span>
                                <span class="{{#if agent.permissions.canModerate}}text-green-400{{else}}text-red-400{{/if}}">
                                    {{#if agent.permissions.canModerate}}✓{{else}}✗{{/if}}
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Can Mediate</span>
                                <span class="{{#if agent.permissions.canMediate}}text-green-400{{else}}text-red-400{{/if}}">
                                    {{#if agent.permissions.canMediate}}✓{{else}}✗{{/if}}
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Can Validate</span>
                                <span class="{{#if agent.permissions.canValidate}}text-green-400{{else}}text-red-400{{/if}}">
                                    {{#if agent.permissions.canValidate}}✓{{else}}✗{{/if}}
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Can Summarize</span>
                                <span class="{{#if agent.permissions.canSummarize}}text-green-400{{else}}text-red-400{{/if}}">
                                    {{#if agent.permissions.canSummarize}}✓{{else}}✗{{/if}}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Performance Metrics -->
        {{#if agent.performanceMetrics}}
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h2 class="text-lg font-semibold text-gray-100 flex items-center">
                    <i data-feather="trending-up" class="w-5 h-5 mr-2 text-purple-500"></i>
                    Performance Metrics
                </h2>
            </div>
            
            <div class="p-6">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div class="text-center p-4 bg-gray-800 rounded-lg">
                        <div class="text-2xl font-bold text-blue-400">{{agent.performanceMetrics.totalProposals}}</div>
                        <div class="text-sm text-gray-400">Proposals</div>
                    </div>
                    
                    <div class="text-center p-4 bg-gray-800 rounded-lg">
                        <div class="text-2xl font-bold text-green-400">{{agent.performanceMetrics.totalVotes}}</div>
                        <div class="text-sm text-gray-400">Votes</div>
                    </div>
                    
                    <div class="text-center p-4 bg-gray-800 rounded-lg">
                        <div class="text-2xl font-bold text-yellow-400">{{agent.performanceMetrics.totalDiscussions}}</div>
                        <div class="text-sm text-gray-400">Discussions</div>
                    </div>
                    
                    <div class="text-center p-4 bg-gray-800 rounded-lg">
                        <div class="text-2xl font-bold text-purple-400">{{agent.performanceMetrics.qualityScore}}</div>
                        <div class="text-sm text-gray-400">Quality Score</div>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
    
    <!-- Sidebar -->
    <div class="space-y-6">
        <!-- Permission Level -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h3 class="font-semibold text-gray-100">Permission Level</h3>
            </div>
            
            <div class="p-6 text-center">
                <div class="w-20 h-20 mx-auto mb-4 rounded-full flex items-center justify-center {{#if (gt agent.permissions.level 3)}}bg-red-600{{else if (gt agent.permissions.level 2)}}bg-yellow-600{{else}}bg-green-600{{/if}}">
                    <span class="text-2xl font-bold text-white">{{agent.permissions.level}}</span>
                </div>
                
                <div class="text-lg font-semibold text-gray-100 mb-2">
                    Level {{agent.permissions.level}}
                </div>
                
                <div class="text-sm text-gray-400">
                    {{#if (eq agent.permissions.level 1)}}Basic Participation
                    {{else if (eq agent.permissions.level 2)}}Standard Governance
                    {{else if (eq agent.permissions.level 3)}}Advanced Functions
                    {{else if (eq agent.permissions.level 4)}}System Administration
                    {{else}}Custom Level{{/if}}
                </div>
            </div>
        </div>
        
        <!-- Usage Limits -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h3 class="font-semibold text-gray-100">Usage Limits</h3>
            </div>
            
            <div class="p-6 space-y-4">
                {{#if agent.permissions.maxProposalsPerDay}}
                <div class="flex justify-between items-center">
                    <span class="text-gray-400">Proposals/Day</span>
                    <span class="font-medium text-gray-200">{{agent.permissions.maxProposalsPerDay}}</span>
                </div>
                {{/if}}
                
                {{#if agent.permissions.maxDiscussionsPerDay}}
                <div class="flex justify-between items-center">
                    <span class="text-gray-400">Discussions/Day</span>
                    <span class="font-medium text-gray-200">{{agent.permissions.maxDiscussionsPerDay}}</span>
                </div>
                {{/if}}
                
                {{#if agent.permissions.maxVotesPerSession}}
                <div class="flex justify-between items-center">
                    <span class="text-gray-400">Votes/Session</span>
                    <span class="font-medium text-gray-200">{{agent.permissions.maxVotesPerSession}}</span>
                </div>
                {{/if}}
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h3 class="font-semibold text-gray-100">Actions</h3>
            </div>
            
            <div class="p-6 space-y-3">
                <a href="/proposals?authorId={{agent.id}}" class="flex items-center space-x-2 text-blue-400 hover:text-blue-300 text-sm">
                    <i data-feather="file-text" class="w-4 h-4"></i>
                    <span>View Proposals</span>
                </a>
                
                <a href="/discussions?participantId={{agent.id}}" class="flex items-center space-x-2 text-yellow-400 hover:text-yellow-300 text-sm">
                    <i data-feather="message-circle" class="w-4 h-4"></i>
                    <span>View Discussions</span>
                </a>
                
                <a href="/agents/{{agent.id}}/permissions" class="flex items-center space-x-2 text-purple-400 hover:text-purple-300 text-sm">
                    <i data-feather="shield" class="w-4 h-4"></i>
                    <span>Check Permissions</span>
                </a>
                
                <a href="/api/agents/{{agent.id}}" target="_blank" class="flex items-center space-x-2 text-green-400 hover:text-green-300 text-sm">
                    <i data-feather="code" class="w-4 h-4"></i>
                    <span>API Data</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Permission Matrix -->
{{#if permissions}}
<div class="mt-8 bg-gray-900 border border-gray-800 rounded-lg">
    <div class="p-6 border-b border-gray-800">
        <h2 class="text-lg font-semibold text-gray-100 flex items-center">
            <i data-feather="grid" class="w-5 h-5 mr-2 text-indigo-500"></i>
            Detailed Permission Matrix
        </h2>
    </div>
    
    <div class="p-6">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-800">
                        <th class="text-left p-3 font-medium text-gray-300">Action</th>
                        <th class="text-left p-3 font-medium text-gray-300">Resource</th>
                        <th class="text-left p-3 font-medium text-gray-300">Conditions</th>
                        <th class="text-center p-3 font-medium text-gray-300">Allowed</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each permissions}}
                    <tr class="border-b border-gray-800 hover:bg-gray-800/50">
                        <td class="p-3 text-gray-200 font-mono">{{action}}</td>
                        <td class="p-3 text-gray-300">{{resource}}</td>
                        <td class="p-3 text-gray-400 text-sm">
                            {{#if conditions}}
                                {{json conditions}}
                            {{else}}
                                No conditions
                            {{/if}}
                        </td>
                        <td class="p-3 text-center">
                            <span class="w-4 h-4 inline-block rounded-full bg-green-500"></span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{/if}}

<script>
    feather.replace();
</script>
