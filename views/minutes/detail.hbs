<!-- Header -->
<div class="flex justify-between items-start mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-100">{{#if session.title}}{{session.title}}{{else}}Minutes Session {{session.id}}{{/if}}</h1>
        <div class="flex items-center space-x-6 text-sm text-gray-400 mt-2">
            <span class="flex items-center space-x-1">
                <i data-feather="hash" class="w-4 h-4"></i>
                <span>Session {{session.id}}</span>
            </span>
            {{#if session.date}}
            <span class="flex items-center space-x-1">
                <i data-feather="calendar" class="w-4 h-4"></i>
                <span>{{formatDate session.date}}</span>
            </span>
            {{/if}}
        </div>
    </div>
    
    <a href="/minutes" class="inline-flex items-center space-x-2 bg-gray-700 hover:bg-gray-600 text-gray-300 px-4 py-2 rounded-lg transition-colors">
        <i data-feather="arrow-left" class="w-4 h-4"></i>
        <span>Back to Minutes</span>
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Session Summary -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h2 class="text-lg font-semibold text-gray-100 flex items-center">
                    <i data-feather="file-text" class="w-5 h-5 mr-2 text-blue-500"></i>
                    Session Summary
                </h2>
            </div>
            
            <div class="p-6">
                {{#if session.summary}}
                <div class="prose prose-invert max-w-none">
                    <div class="whitespace-pre-wrap text-gray-300 leading-relaxed">{{safeContent session.summary}}</div>
                </div>
                {{else}}
                <div class="text-gray-500 italic">No summary available for this session</div>
                {{/if}}
            </div>
        </div>
        
        <!-- Voting Results -->
        {{#if results}}
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h2 class="text-lg font-semibold text-gray-100 flex items-center">
                    <i data-feather="bar-chart" class="w-5 h-5 mr-2 text-purple-500"></i>
                    Voting Results
                </h2>
            </div>
            
            <div class="p-6">
                <!-- Session Stats -->
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                    <div class="text-center p-4 bg-gray-800 rounded-lg">
                        <div class="text-2xl font-bold text-blue-400">{{results.totalVotes}}</div>
                        <div class="text-sm text-gray-400">Total Votes</div>
                    </div>
                    
                    <div class="text-center p-4 bg-gray-800 rounded-lg">
                        <div class="text-2xl font-bold text-green-400">{{results.totalAgents}}</div>
                        <div class="text-sm text-gray-400">Participants</div>
                    </div>
                    
                    <div class="text-center p-4 bg-gray-800 rounded-lg">
                        <div class="text-2xl font-bold text-yellow-400">{{results.resultsByProposal.length}}</div>
                        <div class="text-sm text-gray-400">Proposals</div>
                    </div>
                    
                    <div class="text-center p-4 bg-gray-800 rounded-lg">
                        <div class="text-2xl font-bold text-purple-400">{{round results.participationRate}}%</div>
                        <div class="text-sm text-gray-400">Participation</div>
                    </div>
                </div>
                
                <!-- Proposal Results -->
                {{#if results.resultsByProposal}}
                <div class="space-y-4">
                    <h3 class="font-medium text-gray-300">Proposal Results</h3>
                    {{#each results.resultsByProposal}}
                    <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
                        <div class="flex items-center justify-between mb-3">
                            <div>
                                <h4 class="font-medium text-gray-100">{{proposalRef}}</h4>
                                <div class="text-sm text-gray-400">{{totalVotes}} votes cast</div>
                            </div>
                            
                            <span class="px-3 py-1 text-sm font-medium rounded-full {{#if (eq result 'approved')}}bg-green-900 text-green-300{{else if (eq result 'rejected')}}bg-red-900 text-red-300{{else}}bg-yellow-900 text-yellow-300{{/if}}">
                                {{capitalize result}}
                            </span>
                        </div>
                        
                        <div class="grid grid-cols-3 gap-3">
                            <div class="text-center p-2 bg-green-900/20 border border-green-800 rounded">
                                <div class="font-bold text-green-400">{{approveCount}}</div>
                                <div class="text-xs text-green-300">Approve</div>
                            </div>
                            
                            <div class="text-center p-2 bg-red-900/20 border border-red-800 rounded">
                                <div class="font-bold text-red-400">{{rejectCount}}</div>
                                <div class="text-xs text-red-300">Reject</div>
                            </div>
                            
                            <div class="text-center p-2 bg-gray-700 border border-gray-600 rounded">
                                <div class="font-bold text-gray-400">{{abstainCount}}</div>
                                <div class="text-xs text-gray-300">Abstain</div>
                            </div>
                        </div>
                        
                        <div class="mt-3 text-center">
                            <div class="text-sm text-gray-400">
                                Consensus: {{consensusPercentage}}% | 
                                Quorum: {{#if quorumMet}}✓ Met{{else}}✗ Not Met{{/if}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{/if}}
            </div>
        </div>
        {{/if}}
    </div>
    
    <!-- Sidebar Info -->
    <div class="space-y-6">
        <!-- Session Info -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h3 class="font-semibold text-gray-100">Session Details</h3>
            </div>
            
            <div class="p-6 space-y-4">
                <div>
                    <label class="text-sm font-medium text-gray-400">Session ID</label>
                    <p class="text-gray-200 font-mono">{{session.id}}</p>
                </div>
                
                {{#if session.date}}
                <div>
                    <label class="text-sm font-medium text-gray-400">Date</label>
                    <p class="text-gray-200">{{formatDate session.date}}</p>
                </div>
                {{/if}}
                
                <div>
                    <label class="text-sm font-medium text-gray-400">Created</label>
                    <p class="text-gray-200">{{formatDate session.createdAt}}</p>
                </div>
                
                <div>
                    <label class="text-sm font-medium text-gray-400">Updated</label>
                    <p class="text-gray-200">{{formatDate session.updatedAt}}</p>
                </div>
            </div>
        </div>
        
        <!-- Session Metadata -->
        {{#if session.metadata}}
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h3 class="font-semibold text-gray-100">Metadata</h3>
            </div>
            
            <div class="p-6">
                <pre class="text-sm text-gray-300 bg-gray-950 p-4 rounded border border-gray-800 overflow-x-auto">{{json session.metadata}}</pre>
            </div>
        </div>
        {{/if}}
        
        <!-- Quick Actions -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg">
            <div class="p-6 border-b border-gray-800">
                <h3 class="font-semibold text-gray-100">Actions</h3>
            </div>
            
            <div class="p-6 space-y-3">
                {{#if results}}
                <a href="/proposals?session={{session.id}}" class="flex items-center space-x-2 text-blue-400 hover:text-blue-300 text-sm">
                    <i data-feather="file-text" class="w-4 h-4"></i>
                    <span>View Related Proposals</span>
                </a>
                {{/if}}
                
                <a href="/api/minutes/sessions/{{session.id}}" target="_blank" class="flex items-center space-x-2 text-green-400 hover:text-green-300 text-sm">
                    <i data-feather="code" class="w-4 h-4"></i>
                    <span>API Data</span>
                </a>
                
                {{#if results}}
                <a href="/api/minutes/sessions/{{session.id}}/results" target="_blank" class="flex items-center space-x-2 text-purple-400 hover:text-purple-300 text-sm">
                    <i data-feather="bar-chart" class="w-4 h-4"></i>
                    <span>Full Results API</span>
                </a>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<script>
    feather.replace();
</script>
