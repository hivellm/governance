<div class="text-center py-20">
    <div class="max-w-2xl mx-auto">
        <!-- 404 Icon -->
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-700 rounded-full mb-6">
            <i data-feather="search" class="w-10 h-10 text-gray-400"></i>
        </div>
        
        <h1 class="text-6xl font-bold text-gray-100 mb-4">404</h1>
        
        <h2 class="text-2xl font-semibold text-gray-300 mb-4">Page Not Found</h2>
        
        <p class="text-lg text-gray-400 mb-8">
            The page you're looking for doesn't exist or has been moved.
        </p>
        
        <!-- URL Info -->
        <div class="bg-gray-900 border border-gray-800 rounded-lg p-6 mb-8">
            <h3 class="text-lg font-semibold text-gray-100 mb-2">Requested URL</h3>
            <code class="text-blue-400 bg-gray-950 px-3 py-2 rounded">{{url}}</code>
        </div>
        
        <!-- Suggested Actions -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <a href="/dashboard" class="bg-gray-900 border border-gray-800 rounded-lg p-6 hover:border-blue-500 transition-colors">
                <i data-feather="home" class="w-8 h-8 text-blue-500 mx-auto mb-3"></i>
                <h3 class="font-semibold text-gray-100 mb-2">Dashboard</h3>
                <p class="text-gray-400 text-sm">Go to main dashboard</p>
            </a>
            
            <a href="/proposals" class="bg-gray-900 border border-gray-800 rounded-lg p-6 hover:border-green-500 transition-colors">
                <i data-feather="file-text" class="w-8 h-8 text-green-500 mx-auto mb-3"></i>
                <h3 class="font-semibold text-gray-100 mb-2">Proposals</h3>
                <p class="text-gray-400 text-sm">Browse proposals</p>
            </a>
            
            <a href="/agents" class="bg-gray-900 border border-gray-800 rounded-lg p-6 hover:border-purple-500 transition-colors">
                <i data-feather="users" class="w-8 h-8 text-purple-500 mx-auto mb-3"></i>
                <h3 class="font-semibold text-gray-100 mb-2">Agents</h3>
                <p class="text-gray-400 text-sm">Manage agents</p>
            </a>
        </div>
        
        <!-- Back Button -->
        <div class="flex justify-center">
            <button onclick="history.back()" class="inline-flex items-center space-x-2 bg-gray-700 hover:bg-gray-600 text-gray-300 px-6 py-3 rounded-lg transition-colors">
                <i data-feather="arrow-left" class="w-5 h-5"></i>
                <span>Go Back</span>
            </button>
        </div>
    </div>
</div>

<script>
    feather.replace();
</script>
